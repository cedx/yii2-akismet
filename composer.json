{
  "description": "Akismet connector for the Yii Framework.",
  "homepage": "https://dev.belin.io/yii2-akismet",
  "license": "MIT",
  "name": "cedx/yii2-akismet",
  "type": "yii2-extension",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"yii\\akismet\\": "lib/"}
  },
  "autoload-dev": {
    "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php", "vendor/yiisoft/yii2/Yii.php"],
    "psr-4": {"yii\\akismet\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation",
    "yii2"
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-spl": "*",
    "guzzlehttp/psr7": "^1.4.2",
    "yiisoft/yii2": "^2.0.15",
    "yiisoft/yii2-httpclient": "^2.0.6"
  },
  "require-dev": {
    "cedx/coveralls": "^9.0.1",
    "consolidation/robo": "^1.3.1",
    "henrikbjorn/lurker": "^1.2.0",
    "phpstan/phpstan": "^0.10.3",
    "phpunit/phpunit": "^7.3.2"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/yii2-akismet/api",
    "issues": "https://github.com/cedx/yii2-akismet/issues"
  }
}
