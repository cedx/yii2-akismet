{
  "description": "Akismet connector for the Yii Framework.",
  "homepage": "https://github.com/cedx/yii2-akismet",
  "name": "cedx/yii2-akismet",

  "license": "Apache-2.0",
  "type": "yii2-extension",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"yii\\akismet\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation",
    "yii2"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-curl": "*",
    "ext-json": "*",
    "psr/http-message": "^1.0.1",
    "yiisoft/yii2": "^2.0.12",
    "yiisoft/yii2-httpclient": "^2.0.3"
  },
  "require-dev": {
    "cedx/coveralls": "^1.0.0",
    "cedx/phpunit-expect": "^0.2.0",
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0"
  },
  "scripts": {
    "coverage": "coveralls --file=var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/yii2-akismet/issues"
  }
}
