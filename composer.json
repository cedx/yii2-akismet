{
  "description": "Akismet connector for the Yii Framework.",
  "homepage": "https://cedx.github.io/yii2-akismet",
  "license": "MIT",
  "name": "cedx/yii2-akismet",
  "type": "yii2-extension",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"yii\\akismet\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation",
    "yii2"
  ],
  "require": {
    "php": ">=7.1.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-spl": "*",
    "guzzlehttp/psr7": "^1.4.2",
    "yiisoft/yii2": "^2.0.15",
    "yiisoft/yii2-httpclient": "^2.0.5"
  },
  "require-dev": {
    "cedx/coveralls": "^6.0.0",
    "cedx/phpunit-expect": "^0.4.0",
    "phing/phing": "^2.16.1"
  },
  "scripts": {
    "coverage": "coveralls var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "docs": "https://cedx.github.io/yii2-akismet/api",
    "issues": "https://github.com/cedx/yii2-akismet/issues"
  }
}
